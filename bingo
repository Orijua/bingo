package bingo;

import java.util.Random;
import java.util.Scanner;

/**
 *
 * @author oriol
 */
public class Bingo {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int[][] carton = new int[3][9];

        carton = crearCarton();
        pedirNumero(carton);

    }

    public static void pedirNumero(int[][] cartton) {
        Random rd = new Random();
        char respuesta;
        do {
            mostrarCarton(cartton);
            System.out.println("\nNuevo numero: " + crearBombo(rd.nextInt(90)));
            respuesta = SiNo("Siguiente numero (s/n)?", 's', 'n');

        } while (respuesta == 's');

    }

    public static int[][] crearCarton() {
        Random rd = new Random();
        int[][] carton = new int[3][9];

        for (int i = 0; i < carton.length; i++) {
            for (int j = 0; j < carton[i].length; j++) {
                carton[i][j] = rd.nextInt(90);
            }
        }
        return carton;
    }

    public static void mostrarCarton(int carton[][]) {
        for (int i = 0; i < carton.length; i++) {
            for (int j = 0; j < carton[i].length; j++) {
                System.out.printf("%3d ", carton[i][j]);
            }
            System.out.println();
        }
    }

    public static void crearBombo(int a) {
        int listado = 0;

        int[] bombo = new int[90];

        for (int i = 0; i < bombo.length; i++) {
            listado += 1;
            bombo[i] = listado;
        }
    }

    public static int darNumeroBombo(int[] bombocreado) {
        Random rd = new Random();

        int numeroEnviar, test;

        numeroEnviar = bombocreado[rd.nextInt()];
        test = bombocreado[rd.nextInt()];
        bombocreado[test] = 0;

        return bombocreado[numeroEnviar] - 1;
    }

    public static void mostrarBombo(int bombo[][]) {
        for (int i = 0; i < bombo.length; i++) {
            System.out.printf("%2d ", bombo[i]);
        }
    }

    public static char SiNo(String frase, char caracter1, char caracter2) {
        Scanner sc = new Scanner(System.in);

        System.out.println(frase);
        char caracter = sc.next().charAt(0);

        while (caracter != caracter1 && caracter != caracter2) {
            System.out.println(frase);
            caracter = sc.next().charAt(0);
        }

        return caracter;
    }
}
